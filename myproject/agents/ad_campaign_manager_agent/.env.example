# Ad Campaign Manager Agent - Environment Variables Example
# Copy this file to .env and fill in your specific values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Facebook & Instagram API Credentials
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_BUSINESS_ID=your_facebook_business_id

# Twitter/X API Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn API Credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Campaign Management Settings
DEFAULT_CAMPAIGN_BUDGET=1000
DEFAULT_CAMPAIGN_DURATION=14
DEFAULT_TARGET_PLATFORMS=facebook,instagram,twitter,linkedin
ENABLE_AUTO_OPTIMIZATION=false
OPTIMIZATION_INTERVAL_HOURS=24
PERFORMANCE_ALERT_THRESHOLD=0.05

# Reporting & Analytics Settings
REPORT_EXPORT_FORMAT=pdf
ENABLE_DETAILED_LOGGING=true
SAVE_PERFORMANCE_HISTORY=true
PERFORMANCE_HISTORY_DAYS=90
DEFAULT_REPORT_TYPE=comprehensive

# File Paths
TEMPLATES_PATH=data/templates
CAMPAIGNS_PATH=data/campaigns
AUDIENCES_PATH=data/audiences
REPORTS_PATH=data/reports
AD_CREATIVES_PATH=data/ad_creatives

# Notification Settings (Optional)
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Advanced Settings
MAX_CONCURRENT_CAMPAIGNS=10
RATE_LIMIT_REQUESTS_PER_MINUTE=60
CACHE_DURATION_SECONDS=300
DEBUG_MODE=false 