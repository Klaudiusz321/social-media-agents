# Analytics Agent - Environment Variables Example
# Copy this file to .env and fill in your specific values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Instagram API Credentials
INSTAGRAM_API_KEY=your_instagram_api_key
INSTAGRAM_API_SECRET=your_instagram_api_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ID=your_instagram_business_id

# Twitter/X API Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn API Credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Analytics Settings
DEFAULT_DATE_RANGE_DAYS=30
DEFAULT_METRICS=impressions,reach,engagement_rate,followers,likes,comments,shares,clicks,profile_visits
ENABLE_DETAILED_LOGGING=true
SAVE_ANALYTICS_HISTORY=true
ANALYTICS_HISTORY_DAYS=90
DEFAULT_REPORT_TYPE=comprehensive

# Visualization Settings
DEFAULT_VISUALIZATION_TYPE=line
DEFAULT_COLOR_SCHEME=#3498db,#2ecc71,#e74c3c,#f39c12,#9b59b6
INCLUDE_BRANDING=true
DEFAULT_EXPORT_FORMAT=pdf
VISUALIZATION_WIDTH=1200
VISUALIZATION_HEIGHT=800

# File Paths
TEMPLATES_PATH=data/templates
ANALYTICS_PATH=data/analytics
REPORTS_PATH=data/reports
VISUALIZATIONS_PATH=data/visualizations

# Notification Settings (Optional)
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Advanced Settings
DATA_CACHE_DURATION_SECONDS=3600
PARALLEL_PROCESSING=true
ENABLE_TREND_DETECTION=true
TREND_SENSITIVITY=medium
DEBUG_MODE=false
MAX_CONCURRENT_REQUESTS=5 