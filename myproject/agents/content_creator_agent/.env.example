# Content Creator Agent - Environment Variables

# OpenAI API credentials
OPENAI_API_KEY=your_openai_api_key

# Social media platform API keys (optional - if posting directly)
INSTAGRAM_API_KEY=your_instagram_api_key
INSTAGRAM_API_SECRET=your_instagram_api_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Image generation API (if using for automated image creation)
STABILITY_API_KEY=your_stability_ai_key
MIDJOURNEY_API_KEY=your_midjourney_api_key

# Content settings
DEFAULT_PLATFORMS=instagram,twitter,linkedin
CONTENT_PIECES_PER_RUN=3
ENABLE_LOGGING=true

# Data paths
TEMPLATES_PATH=data/templates.json
BRAND_GUIDELINES_PATH=data/brand_guidelines.json
CONTENT_OUTPUT_PATH=data/content
IMAGES_OUTPUT_PATH=data/images

# Advanced settings
MODEL_NAME=gpt-4o
DEFAULT_IMAGE_FORMAT=square
CACHE_DURATION_HOURS=24 