# Engagement Agent Environment Variables
# Copy this file to .env and fill in your values

# ==============================
# API Credentials
# ==============================

# OpenAI API credentials
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Instagram API credentials
INSTAGRAM_API_KEY=your_instagram_api_key_here
INSTAGRAM_API_SECRET=your_instagram_api_secret_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Twitter/X API credentials
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# LinkedIn API credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# ==============================
# Agent Settings
# ==============================

# Platforms to monitor (comma-separated)
ENABLED_PLATFORMS=instagram,twitter,linkedin

# Response generation settings
DEFAULT_RESPONSE_TYPE=auto           # Options: auto, template, custom
MAX_RESPONSES_PER_POST=15            # Maximum responses to generate per post
RESPONSE_TEMPLATE_PATH=data/response_templates.json  # Path to response templates

# Engagement settings
ENGAGEMENT_PRIORITY_THRESHOLD=60     # Priority score threshold (0-100)
MIN_POSTS_TO_ANALYZE=10              # Minimum posts to analyze for trends
LOOKBACK_DAYS=14                     # Days to look back for post analysis
AUTO_RESPOND_TO_COMMENTS=true        # Automatically respond to comments
AUTO_RESPOND_TO_MENTIONS=true        # Automatically respond to mentions
COMMENT_RESPONSE_DELAY_MIN=2         # Minimum delay in minutes between responses
COMMENT_RESPONSE_DELAY_MAX=15        # Maximum delay in minutes between responses

# ==============================
# Paths and Directories
# ==============================

# Data directories
DATA_DIR=data
ENGAGEMENT_DATA_DIR=data/engagement
ANALYTICS_DIR=data/analytics
LOGS_DIR=logs

# Template and guidelines paths
BRAND_GUIDELINES_PATH=data/brand_guidelines.json
RESPONSE_TEMPLATES_PATH=data/response_templates.json

# ==============================
# Logging and Monitoring
# ==============================

# Logging settings
LOG_LEVEL=INFO                       # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_DETAILED_LOGGING=true         # Enable detailed logging
LOG_FILE_RETENTION_DAYS=30           # Days to keep log files

# Notification settings
ENABLE_EMAIL_NOTIFICATIONS=false     # Send email notifications for important events
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# ==============================
# Performance and Caching
# ==============================

# Cache settings
ENABLE_CACHING=true                  # Enable caching of API responses
CACHE_EXPIRY_HOURS=24                # Cache expiry in hours
CACHE_DIR=.cache

# Rate limiting
MAX_API_CALLS_PER_MINUTE=60          # Maximum API calls per minute
ENABLE_RATE_LIMITING=true            # Enable rate limiting for API calls 